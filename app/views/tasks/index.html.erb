<div class="row justify-content-center mt-4">
  <div class="col-md-12">
    <%= form_tag tasks_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search for the service you want"
  %>
  <%= submit_tag "Search", class: "btn btn-primary mb-2 mt-2" %>
<% end %>
  <div class="d-md-none">
    <p style="position: top; width: 228px;"><%= link_to 'Add a Service', new_task_path, class:"positive ui button"  %></p>
  </div>
  </div>
</div>

<div class="row">
  <div class="col-md-5 col-xs-2">
    <% num = 0 %>
    <% @tasks.each do |task| %>
      <% num += 1 %>
      <p><%= num %> | <%= link_to task.title.capitalize, task_path(task) %>| <em> Location: </em> <%= task.location %> | <em><%= time_ago_in_words(task.created_at) %></em> | <%= link_to task.get_upvotes.size, like_task_path(task), method: :put, remote: :true, class:'btn btn-default'%>Likes</p>
      <hr>
    <% end %>
  </div>

  <div class="col-md-7 col-xs-2 ">
    <div class="ontop">
      <div class="jumbotron">
        <h1 class="display-4">Add | Look for a service</h1>
        <p class="lead"> - Search for over 100+ reliable services to find what you want </p>
        <p class="lead"> - Do you provide a reliable service? Add you skills here for free</p>
        <hr class="my-4">
        <p><%= link_to 'New Service', new_task_path, class:"btn btn-primary btn-lg"  %></p>
      </div>
    </div>
  </div>
</div>

