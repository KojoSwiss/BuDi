<div class="row justify-content-center">
  <div class="col-md-10">
    <%= form_tag tasks_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a Service"
  %>
  <%= submit_tag "Search", class: "btn btn-primary mb-2 mt-2" %>
<% end %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-5">
    <% num = 0 %>
    <% @tasks.each do |task| %>
      <% num += 1 %>
      <h2><%= num %> | <%= link_to task.title.capitalize, task_path(task) %> | <%= link_to task.get_upvotes.size, like_task_path(task), method: :put, remote: :true, class:'btn btn-default'%> Likes</h2>
      <p> <em>Company name: </em> <%= task.company %></p>
      <p> <em> Location: </em> <%= task.location %></p>
      <hr>
    <% end %>
  </div>

  <div class="col-md-5">
    <div class="ontop">
      <div class="jumbotron">
        <h1 class="display-4">Find the Service you need</h1>
        <p class="lead">What are you looking for? 🕵🏽‍♂️</p>
        <hr class="my-4">
        <p>Do you want people to find your service easily? Just add it here 😉</p>
        <p><%= link_to 'New Service', new_task_path, class:"btn btn-primary btn-lg"  %></p>
      </div>
    </div>
  </div>
</div>

