<%= simple_form_for @task, defaults: { input_html: { class: 'form-horizontal' } } do |f| %>
  <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a Category"} %>
  <%= f.input :title, label: "Service title" %>
  <%= f.input :description, label: "Service Description" %>
  <%= f.input :company, label: "Your Company" %>
  <%= f.input :location, label: "Where are you located", placeholder: "Tema" %>
  <%= f.input :url, required: false, label: "Link to Service" %>
  <%= f.input :Ig_url, required: false, label: "Instagram Handle" %>
  <%= f.input :Tw_url, required: false, label: "Twitter Handle" %>
  <%= f.button :submit %>
  <br>
<% end %>
