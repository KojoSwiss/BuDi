<div class="comment">
  <p> <%= comment.content %> </p>
  <p> By: <%= comment.user.first_name %> <%= time_ago_in_words(comment.created_at) %> </p>
  <div class="links">
    <% if comment.user_id == current_user.id %>
      <%= link_to "Edit", edit_task_comment_path(comment.task, comment)  %>
      <%= link_to "Delete", task_comment_path(comment.task, comment), method: :delete, data: {confirm: "Are you sure"}  %>
    <% end %>
  </div>
</div>
